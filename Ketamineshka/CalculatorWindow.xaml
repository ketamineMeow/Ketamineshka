<Window x:Class="YourNamespace.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="400" Width="400" Background="#FFF1F1F1">
    <StackPanel>
        <TextBlock Text="Введите число 1 : " Margin="10"/>
        <TextBox x:Name="Operand1TextBox" Margin="10"/>
        <TextBlock Text="Введите число 2 : " Margin="10"/>
        <TextBox x:Name="Operand2TextBox" Margin="10"/>
        <TextBlock Text="Введите знак действия: " Margin="10"/>
        <TextBox x:Name="SignTextBox" Margin="10"/>
        <TextBlock Text="Операции: (+, -, *, /)" Margin="10"/>
        <Button Content="Вычислить" Click="Calculate"/>
        <TextBlock x:Name="ResultTextBlock" Margin="10"/>
    </StackPanel>
</Window>

